block content
    .content__grid
        each word, index in masked_words
            .content__grid__word(class=`${index === 0 ? "current_word" : ""}`)
                - let count = 0;
                while count < masked_words[index].length + 1
                    .content__grid__word__row(class=`${index ===0 && count === 0 ? "current_row" : ""}`)
                        for letter of word
                            .content__grid__row__box.empty
                    - count++;
            if masked_words.length > 0 && index !== masked_words.length - 1
                .content__grid__space
                    .content__grid__row__box.hidden
